{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["./"],
      "@interfaces/*": ["./interfaces/*"],
      "@styles/*": ["./styles/*"],
      "@colors": ["styles/colors"],
      "@context": ["context"],
      "@components": ["components/index.tsx"],
      "@avatar": ["components/avatar/index.tsx"],
      "@clothes": ["components/clothes/index.tsx"],
      "@eyes": ["components/eyes/index.tsx"],
      "@face": ["components/face/index.tsx"],
      "@head": ["components/head/index.tsx"],
      "@mouth": ["components/mouth/index.tsx"],
      "@skin": ["components/skin/index.tsx"],
      "@utils": ["utils/index.tsx"],
      "@constants": ["constants/index.tsx"],
      "@theme": ["theme/index.tsx"]
    }
  },
  "include": ["."],
  "references": [{ "path": "./tsconfig.node.json" }]
}
